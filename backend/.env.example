# Ứng dụng
NODE_ENV=development
PORT=5000

# Cơ sở dữ liệu
DATABASE_URL=postgresql://username:password@localhost:5432/soul_db
DB_SSL=false
DB_SCHEMA=public

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1d
JWT_ISSUER=soul-api
JWT_AUDIENCE=soul-app

# Bảo mật
COOKIE_SECRET=your_cookie_secret_here
COOKIE_DOMAIN=localhost
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Email (dùng cho quên mật khẩu, xác thực...)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
SMTP_FROM=Soul <noreply@example.com>

# Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=30

# Redis (cho cache và rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Google OAuth (nếu cần)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=

# Facebook OAuth (nếu cần)
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_CALLBACK_URL=

# AWS S3 (nếu dùng lưu trữ đám mây)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-southeast-1
AWS_BUCKET_NAME=

# Sentry (giám sát lỗi)
SENTRY_DSN=

# New Relic (giám sát hiệu năng)
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME=Soul Backend